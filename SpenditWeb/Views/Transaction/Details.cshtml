@model Spendit.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Details Transaction</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Category.Title)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                </dl>
            </div>
            <div>
                <button type="button" class="btn btn-primary" style="margin-right:5px;" onclick="location.href='@Url.Action("Edit", "Transaction", new { id = Model?.TransactionId })'">Edit</button>
                <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("Index", "Transaction")'">Back to List</button>
            </div>
        </div>
    </div>
</div>

@model Spendit.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Are you sure you want to delete this Transaction?</h2>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.CategoryId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="TransactionId" />
                    <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:5px;" />
                    <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("Index", "Transaction")'">Back to List</button>
                </form>
            </div>
        </div>
    </div>
</div>

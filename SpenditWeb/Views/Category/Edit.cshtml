@model Spendit.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Edit Category</h1>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" style="margin-bottom: 10px;" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control" style="margin-bottom: 10px;" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" name="Type" id="radioleft" value="Expense" checked="@(Model.Type=="Expense")">
                        <label class="btn btn-outline-danger" for="radioleft">Expense</label>
                        <input type="radio" class="btn-check" name="Type" id="radioright" value="Income" checked="@(Model.Type=="Income")">
                        <label class="btn btn-outline-danger" for="radioright">Income</label>
                    </div>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" style="margin-right:5px;" /> 
                    <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("Index", "Category")'">Back to List</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
